function Bot_Update() {
cd /usr/bin
rm -rf bot.zip* &>/dev/null
rm -rf kyt.zip* &>/dev/null
wget https://raw.githubusercontent.com/kertasbaru/os/main/bot/bot.zip
unzip bot.zip
chmod +x bot/*
mv bot/* /usr/bin
rm -rf bot.zip
clear
wget https://raw.githubusercontent.com/kertasbaru/os/main/bot/kyt.zip
unzip kyt.zip
rm -rf kyt.zip
systemctl restart kyt
m-bot
}
function Update_apiserver() {
	NODE_VERSION=$(node -v 2>/dev/null | grep -oP '(?<=v)\d+' || echo "0")
	if [ "$NODE_VERSION" -lt 22 ]; then
		echo -e "${yellow}Installing or upgrading Node.js to version 22...${neutral}"
		curl -fsSL https://deb.nodesource.com/setup_22.x | sudo -E bash - || echo -e "${red}Failed to download Node.js setup${neutral}"
		apt-get install -y nodejs || echo -e "${red}Failed to install Node.js${neutral}"
		npm install -g npm@latest
	fi
	rm -r /usr/bin/api-serversellvpn
	wget -qO /usr/bin/api-serversellvpn.zip "https://raw.githubusercontent.com/kertasbaru/os/main/install/api-serversellvpn.zip"
	cd /usr/bin
	unzip api-serversellvpn.zip
	rm api-serversellvpn.zip*
	chmod +x api-serversellvpn/*
	npm install --prefix /usr/bin/api-serversellvpn express child_process
	systemctl restart apisellvpn >/dev/null 2>&1
	m-bot
	}
function Bot_Update_Res() {
	NODE_VERSION=$(node -v 2>/dev/null | grep -oP '(?<=v)\d+' || echo "0")
	if [ "$NODE_VERSION" -lt 22 ]; then
		echo -e "${yellow}Installing or upgrading Node.js to version 22...${neutral}"
		curl -fsSL https://deb.nodesource.com/setup_22.x | sudo -E bash - || echo -e "${red}Failed to download Node.js setup${neutral}"
		apt-get install -y nodejs || echo -e "${red}Failed to install Node.js${neutral}"
		npm install -g npm@latest
	fi
	cd /root/Nebotsell
	cp sellvpn.db .vars.json /root/
	cd /root
	rm -r /root/Nebotsell
    if [ ! -f /root/Nebotsell/app.js ]; then
        wget -qO https://raw.githubusercontent.com/kertasbaru/os/main/bot/Nebotsell.zip
		unzip Nebotsell.zip
        rm Nebotsell.zip*
        chmod +x Nebotsell/*
		mv sellvpn.db .vars.json Nebotsell
    fi

    if ! npm list --prefix /root/Nebotsell sqlite3 express crypto telegraf axios dotenv bull js-yaml autoft-orkut >/dev/null 2>&1; then
        npm install --prefix /root/Nebotsell sqlite3 express crypto telegraf axios dotenv bull js-yaml autoft-orkut
    fi
systemctl restart sellvpn
m-bot
}
