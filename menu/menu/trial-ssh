#!/bin/bash
REDBG="\033[41m"      # Latar belakang merah
WHITEBLD="\033[1;37m"
WHITE="\033[1;37m" # Teks putih tebal
NC="\033[0m"          # Reset warna
GREEN="\033[96;1m"
REDBLD="\033[0m\033[91;1m"
Green="\e[92;1m"
RED="\033[1;31m"
YELLOW="\033[33m"
