function Details_Account() {
printf "${WHITEBLD} Remarks       : ${user}${NC}\n"
printf "${WHITEBLD} Domain        : ${domain}${NC}\n"
printf "${WHITEBLD} User Quota    : ${Quota} GB${NC}\n"
printf "${WHITEBLD} User Ip       : ${iplimit} IP${NC}\n"
printf "${WHITEBLD} Port TLS      : 400,8443${NC}\n"
printf "${WHITEBLD} port WS       : 80,8880,8080,2082${NC}\n"
printf "${WHITEBLD} Key           : ${uuid}${NC}\n"
printf "${WHITEBLD} Localtions    : $CITY${NC}\n"
printf "${WHITEBLD} ISP           : $ISP${NC}\n"
printf "${WHITEBLD} AlterId       : 0${NC}\n"
printf "${WHITEBLD} Security      : auto${NC}\n"
printf "${WHITEBLD} Network       : ws${NC}\n"
printf "${WHITEBLD} Path          : /vmess${NC}\n"
printf "${WHITEBLD} Dynamic Path  : yourbug/vmess${NC}\n"
printf "${WHITEBLD} ServiceName   : vmess-grpc${NC}\n"
}


