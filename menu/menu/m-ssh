GREEN="\033[96;1m"
REDBLD="\033[0m\033[91;1m"
Green="\e[92;1m"
RED="\033[1;31m"
YELLOW="\033[33m"
BLUE="\033[36m"
FONT="\033[0m"
GREENBG="\033[42;37m"
clear
garis(){
print_rainbow " ────────────────────────────────────────────────"
}
garis_tebal(){
print_rainbow " ════════════════════════════════════════════════"
}
