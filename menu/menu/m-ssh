garis
center "$(printf " ${YELLOW}[ SECURITY & SETTINGS ]${NC}")"
garis
printf "  ${WHITEBLD}(8) Lock Account     (11) Toggle Limit IP${NC}\n"
printf "  ${WHITEBLD}(9) Unlock Account   (12) Auto Kill Account${NC}\n"
printf " ${WHITEBLD}(10) Edit Limit IP${NC}\n"
garis
center "$(printf " ${YELLOW}[ OTHER OPTIONS ]${NC}")"
garis
printf " ${WHITEBLD}(13) Account Details  (14) Check Login UDP${NC}\n"
garis_tebal
center "$(printf " ${WHITEBLD}(15) Back to Main Menu${NC}     ${REDBLD}(x) Exit${NC}")"
garis_tebal
}


Newbie_Banner
