function Details_Account() {
printf "${WHITEBLD} Remarks     : ${user}${NC}\n"
printf "${WHITEBLD} Domain      : ${domain}${NC}\n"
printf "${WHITEBLD} User Quota  : ${Quota} GB${NC}\n"
printf "${WHITEBLD} port TLS    : 443,900,8443${NC}\n"
printf "${WHITEBLD} Location    : $CITY${NC}\n"
printf "${WHITEBLD} ISP         : $ISP${NC}\n"
printf "${WHITEBLD} Port WS     : 80,8080,8880,2086,2082${NC}\n"
printf "${WHITEBLD} Key         : ${uuid}${NC}\n"
printf "${WHITEBLD} Encryption  : none${NC}\n"
printf "${WHITEBLD} Path TLS    : /vless${NC}\n"
printf "${WHITEBLD} ServiceName : vless-grpc${NC}\n"
}

