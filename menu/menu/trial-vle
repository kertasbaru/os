checking_sc() {
  useexp=$(wget -qO- $data_ip | grep -wE $ipsaya | awk '{print $3}')

  if [[ "$useexp" == "Lifetime" ]]; then
    # Jika useexp adalah "Lifetime", anggap tetap aktif

    return
  fi
  date_list_epoch=$(date -d "$date_list" +%s)
  useexp_epoch=$(date -d "$useexp" +%s 2>/dev/null)

  if [[ $? -ne 0 || $date_list_epoch -gt $useexp_epoch ]]; then
    # Tanggal sekarang lebih besar dari tanggal expired, atau format salah
    echo -e "\033[1;93m────────────────────────────────────────────${NC}"
    echo -e "\033[42m          404 NOT FOUND AUTOSCRIPT          ${NC}"
    echo -e "\033[1;93m────────────────────────────────────────────${NC}"
    echo -e ""
    printf "${WHITEBLD}            \033[91;1mPERMISSION DENIED !${NC}"
    printf "${WHITEBLD}   \033[0;33mYour VPS\033[0m $ipsaya \033[0;33mHas been Banned${NC}"
    printf "${WHITEBLD}     \033[0;33mBuy access permissions for scripts${NC}"
    printf "${WHITEBLD}             \033[0;33mContact Admin :${NC}"
    printf "${WHITEBLD}      \033[2;32mWhatsApp\033[0m wa.me/6282326322300"
    echo -e "\033[1;93m────────────────────────────────────────────${NC}"
    exit
  fi
}
