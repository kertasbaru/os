function Details_Account() {
printf "${WHITEBLD} Remarks      : ${user}${NC}\n"
printf "${WHITEBLD} Host/IP      : ${domain}${NC}\n"
printf "${WHITEBLD} User Quota   : ${Quota} GB${NC}\n"
printf "${WHITEBLD} User IP      : ${iplimit} IP${NC}\n"
printf "${WHITEBLD} ISP          : $ISP${NC}\n"
printf "${WHITEBLD} Port TLS     : 443${NC}\n" 
printf "${WHITEBLD} port  WS     : 80,8880,8080${NC}\n"
printf "${WHITEBLD} Key          : ${uuid}${NC}\n" 
printf "${WHITEBLD} Path         : /trojan-ws${NC}\n" 
printf "${WHITEBLD} ServiceName  : trojan-grpc${NC}\n"
}

