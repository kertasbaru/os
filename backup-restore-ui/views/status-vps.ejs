<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Status VPS Online</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    body {
      background: url('https://raw.githubusercontent.com/kertasbaru/nebot/main/Assets/banner.jpg') no-repeat center center/cover;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: white;
      margin: 0;
      padding: 1rem;
    }

    .container {
      max-width: 600px;
      margin: auto;
      background-color: rgba(0, 0, 0, 0.5);
      padding: 1rem;
      border-radius: 1rem;
      backdrop-filter: blur(10px);
    }

    h2 {
      font-size: 1rem;
      margin-top: 1rem;
      border-bottom: 1px solid rgba(255, 255, 255, 0.2);
      padding-bottom: 4px;
      text-transform: uppercase;
    }

    .entry {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 4px 0;
      font-size: 0.95rem;
      border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .status {
      display: flex;
      align-items: center;
      gap: 6px;
      font-size: 0.9rem;
    }

    .dot {
      width: 10px;
      height: 10px;
      border-radius: 50%;
      display: inline-block;
    }

    .online {
      background-color: lime;
    }

    .offline {
      background-color: red;
    }

    .ping {
      font-size: 0.85rem;
      color: #ccc;
    }
  </style>
</head>
<body>
  <div class="container">
    <% groups.forEach(group => { %>
      <h2><%= group.group %></h2>
      <% group.entries.forEach(entry => { %>
        <div class="entry">
          <span><%= entry.name %></span>
          <div class="status">
            <span class="dot <%= entry.status === 'ONLINE' ? 'online' : 'offline' %>"></span>
            <span><%= entry.status.toLowerCase() %></span>
            <% if (entry.status === 'ONLINE') { %>
              <span class="ping">(<%= entry.pingMs %> ms)</span>
            <% } %>
          </div>
        </div>
      <% }) %>
    <% }) %>
  </div>
</body>
</html>
